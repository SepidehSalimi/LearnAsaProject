@model List<BE.course>


<div class="container my-3">
    <div class="row">
        
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="card custom-card mb-3">
                        <div class="sub-layer">
                        <img src="~/images/bg-course.jpeg" alt="bootstrap" class="img-fluid card-img-top">
                            <div class="over-layer">
                                <a asp-action="Details" asp-controller="Course" asp-route-id="@item.id" class="btn btn-primary"> مشاهده و خرید </a>
                                <span class="badge badge-secondary badge-pill"> 50 <i class="fa fa-shopping-basket pr-1"></i></span>
                            </div>
                        </div>
                        <div class="card-body">
                            <a href="course.html" class="card-link">@item.title </a>
                            <p class="text-justify card-text vazir font-14 mt-3">
                                @item.descript
                            </p>
                        </div>
                        <div class="card-footer">
                            <div class="float-left">
                                <small class="text-success mr-2">@item.price تومان</small>
                            </div>
                        </div>
                    </div>
                </div>

            }

        

    </div>
</div>

